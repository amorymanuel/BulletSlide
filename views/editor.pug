  - function iconchooser(point) {
    - var begin = "test2";
    - if (point.hasSubpoint == "true"){
      - begin = begin + " texticonadded";
    - }
    - if (point.hasSubimg == "true"){
      - begin = begin + " imgiconadded";
    - }
    - if (point.hasLink == "true"){
      - begin = begin + " linkiconadded";
    - }
    - return (begin);
  - }

  mixin newpoint(point)
    if(point.type == "text")
