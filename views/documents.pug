// Navigation
nav.navbar.bg-white.border-bottom.border-dark.static-top(style='border-width:3px!important;')
  .container.container3
    a.navbar-brand(style='color:#000000 !important' href='/')
      img(style='height:60px;margin-top:-3px; padding-right:10px;vertical-align:center;' src='/img/bullet.png')
      | BulletSlides
    a.btn.btn-danger(href='/logout') Log Out
.masthead2(style="padding-bottom:300px!important")
  .container
    .row.no-gutters
      .col-md-1
      .col-md-9
        .row
          a.col-md-4.mx-auto.my-auto.prevThumb(href='./' + newID + '/editor')
            .previewthumb.border.bg-white.border-dark.rounded.pr-3.pt-4
              #createNew
                img(src='/img/create.png')
            br
          if(empty == "false")
            each post in posts
              a.col-md-4.mx-auto.my-auto.prevThumb(href='/users/' + userID + '/documents/' + post.postID + '/editor')
                .previewthumb.border.bg-white.border-dark.rounded.pr-3.pt-4
                  h6(style='margin-left:30px')= post.content.title
                  byline.prevbyline
                    i= post.content.author
                  hr
                  ul(style='text-align:left')
                    each lipoint in post.content.listitems
                      li= lipoint.content
                br
          
          .col-md-4.mx-auto
          .col-md-4.mx-auto
      .col-md-2
// Footer
footer.footer
  .container
    .row
      .col-lg-6.h-100.text-center.text-lg-left.my-auto
        ul.list-inline.mb-2
          li.list-inline-item
            a(href='#') About
          li.list-inline-item &sdot;
          li.list-inline-item
            a(href='#') Contact
          li.list-inline-item &sdot;
          li.list-inline-item
            a(href='#') Terms of Use
          li.list-inline-item &sdot;
          li.list-inline-item
            a(href='#') Privacy Policy
        p.small.mb-4.mb-lg-0 &copy; BulletSlides 2020. All Rights Reserved.
      .col-lg-6.h-100.text-center.text-lg-right.my-auto
        ul.list-inline.mb-0
          li.list-inline-item.mr-3
            a(href='#')
              i.fab.fa-facebook.fa-2x.fa-fw
          li.list-inline-item.mr-3
            a(href='#')
              i.fab.fa-twitter-square.fa-2x.fa-fw
          li.list-inline-item
            a(href='#')
              i.fab.fa-instagram.fa-2x.fa-fw
