// Navigation
nav.navbar.bg-white.border-bottom.border-dark.static-top(style='border-width:3px!important;')
  .container.container3
    a.navbar-brand(href='./index.html')
      img(style='height:60px;margin-top:-3px; padding-right:10px;vertical-align:center;' src='./img/bullet.png')
      | BulletSlides
// Masthead
header.masthead.text-white.text-center(style='padding-bottom:0px!important;padding-top:8rem!important')
  .container.container2
    #signupbox(style='background-color:#F5F5F5!important; width:400px!important')
      form.form-signin(action='/signup' method='POST')
        h4.h4.mb-3.font-weight-normal(style='color:black') Sign up to continue
        br
        label.sr-only(for='inputFirst') First name
        input#inputFirst.form-control(name = "inputFirst" type='text' placeholder='First name' required='' autofocus='')
        label.sr-only(for='inputLast') Last name
        input#inputLast.form-control(name = "inputLast" type='text' placeholder='Last name' required='')
        label.sr-only(for='inputEmail') Email address
        input#inputEmail.form-control(name = "inputEmail" type='email' placeholder='Email address' required='')
        label.sr-only(for='inputPassword') Password
        input#inputPassword.form-control(name = "inputPassword" type='password' placeholder='Password' required='')
        br
        if(message)
            h6(style='color:red') #{message}
        button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign up
